<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="Info">

    <select id="allInfoList" resultType="infoContent">
        SELECT * FROM info_content ORDER BY id DESC
    </select>

    <insert id="save"  parameterType="infoContent">
        INSERT INTO info_content (title, content)
        VALUES (#{title}, #{content})
    </insert>

    <select id="find" parameterType="infoContent" resultType="infoContent">
        SELECT * FROM info_content WHERE id = #{id}
    </select>

    <update id="update" parameterType="infoContent">
        UPDATE info_content
        SET title = #{title}, content = #{content}
        WHERE id = #{id}
    </update>


</mapper>
<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="FlagComment">

    <insert id="write" parameterType="FlagComment" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO flag_comment (post_id, nickname, userId, content, created_at)
        VALUES (#{post_id}, #{nickname}, #{userId}, #{content}, NOW())
    </insert>

    <select id="findAll" resultType="FlagComment">
        SELECT * FROM flag_comment
        WHERE post_id = #{post_id}
        ORDER BY id DESC
    </select>


    <select id="findById" parameterType="long" resultType="FlagComment">
        SELECT * FROM flag_comment WHERE id = #{id}
    </select>

    <delete id="delete" parameterType="long">
        DELETE FROM flag_comment WHERE id = #{id}
    </delete>

    <select id="findAllByUserId" parameterType="string" resultType="FlagComment">
        SELECT * FROM flag_comment
        WHERE userId = #{userId}
        ORDER BY created_at DESC
    </select>

</mapper>
